<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.UserMapper">
    <sql id="insertFields">
        username, accountId, password, salt, email, type, status, activation_code, header_url, create_time
    </sql>

    <sql id="selectFields">
        id,accountId,username,password, email,status,header_url, create_time
    </sql>

    <select id="selectByAccountId" resultType="com.blog.entity.User">
        select <include refid="selectFields"></include> from user where accountId = #{accountId};
    </select>
</mapper>